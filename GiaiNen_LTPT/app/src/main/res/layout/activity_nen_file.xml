<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.company.luongchung.giainen_ltpt.GiaiNen"
    android:weightSum="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="monospace"
                android:textSize="16dp"
                android:text="CHỌN FILEs CẦN NÉN:"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/lvNenFile"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </ListView>

            <Button
                android:id="@+id/btnThemRadioNen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button1"
                android:fontFamily="serif-monospace"
                android:text="Thêm file"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTenfilenen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:fontFamily="monospace"
                android:hint="Mời nhập tên file khi nén"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_NF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="monospace"
                android:background="@drawable/custom_button"
                android:text="NÉN FILE"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_Openfodel_N"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button"
                android:fontFamily="monospace"
                android:text="MỞ NƠI NÉN FILE"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
